{
   "name": "nestjs-cms-backend",
   "version": "0.0.1",
   "description": "",
   "author": "THINKTODO.NET @2023",
   "private": true,
   "license": "THINKTODO.NET @2023",
   "scripts": {
      "prebuild": "rimraf dist",
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "env-cmd -f .env nest start",
      "start:dev": "env-cmd -f .env nest start --watch",
      "start:debug": "env-cmd -f .env nest start --debug --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json",
      "typeorm:cli": "ts-node ./node_modules/typeorm/cli.js",
      "typeorm:dev": "ts-node ./node_modules/typeorm/cli.js --d ormconfig-dev.ts migration:run",
      "typeorm:create": "npm run typeorm:cli  migration:create"
   },
   "dependencies": {
      "@nestjs/common": "^8.0.0",
      "@nestjs/config": "^2.2.0",
      "@nestjs/core": "^8.0.0",
      "@nestjs/mapped-types": "*",
      "@nestjs/platform-express": "^8.0.0",
      "@nestjs/swagger": "^6.1.4",
      "@nestjs/typeorm": "^9.0.1",
      "mysql2": "^3.0.1",
      "reflect-metadata": "^0.1.13",
      "rimraf": "^3.0.2",
      "rxjs": "^7.2.0",
      "typeorm": "^0.3.11",
      "uuid": "^9.0.0"
   },
   "devDependencies": {
      "@nestjs/cli": "^8.0.0",
      "@nestjs/schematics": "^8.0.0",
      "@nestjs/testing": "^8.0.0",
      "@types/express": "^4.17.13",
      "@types/jest": "27.0.2",
      "@types/node": "^16.11.10",
      "@types/supertest": "^2.0.11",
      "@typescript-eslint/eslint-plugin": "^5.48.2",
      "@typescript-eslint/parser": "^5.0.0",
      "eslint": "^8.32.0",
      "eslint-config-prettier": "^8.3.0",
      "eslint-config-standard-with-typescript": "^31.0.0",
      "eslint-plugin-import": "^2.27.5",
      "eslint-plugin-n": "^15.6.1",
      "eslint-plugin-prettier": "^4.0.0",
      "eslint-plugin-promise": "^6.1.1",
      "jest": "^27.2.5",
      "prettier": "^2.3.2",
      "source-map-support": "^0.5.20",
      "supertest": "^6.1.3",
      "ts-jest": "^27.0.3",
      "ts-loader": "^9.2.3",
      "ts-node": "10.7.0",
      "tsconfig-paths": "^3.10.1",
      "typescript": "4.5.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   }
}
